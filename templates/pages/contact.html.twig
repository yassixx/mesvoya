{% extends "basefront.html.twig" %}

{% block body %}
    <h1>Page de contact</h1>
    
    {% for message in app.flashes('succes') %}
        <div class="mt-3 alert alert-success">
            {{ message }}
        </div>
        {% endfor %}
    {{ form_start(formcontact) }}
        <!--en realite dans ce bloc ils sont suffisant les 2 lignes : 
        formstart et form end car géré directement par symf-->
    <div class="row mt-3">
        <div class="col">
            {{ form_row(formcontact.nom) }}
        </div>
        <div class="col">
            {{ form_row(formcontact.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(formcontact.message) }}
        </div>
    </div>
    {{ form_end(formcontact) }}
{% endblock %}